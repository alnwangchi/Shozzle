---
// library imports
import { Icon } from 'astro-icon';

// component imports
import Link from './Link.astro';

// data imports
import navData from '../constans/navData';
---

<nav aria-label='Primary'>
  <div class='navbar'>
    <a href='/' class='logomark' aria-label='Go home'>
      <Icon name='logo' width='40' />
    </a>
    <ul>
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style='primary'
            isFilled={false}
            borderVisible={true}
            data-navLink
            icon={item.icon}
          />
        ))
      }
    </ul>
  </div>
</nav>

