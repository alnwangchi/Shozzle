---
// library imports
import { Image } from '@astrojs/image/components';
// utils imports
import { slugify, commonDayFormatter } from '@utils/index.js';
const { category, title, author, date, image } = Astro.props;
---

<header>
  <div class="flex gap-2 items-center">
    <Image
      src={image.src}
      alt={image.alt}
      width={52}
      format="avif"
      fit="cover"
      quality={80}
      aspectRatio="1:1"
    />
    <div class="w-fit">
      <p class="leading-none mb-2">
        <a class="w-fit" href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          commonDayFormatter(date)
        }
      </p>
      <small>
        <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
      </small>
    </div>
  </div>
  <h1 class="my-4">{title}</h1>
  <Image
    src={image.src}
    alt={image.alt}
    width={480}
    format="avif"
    fit="cover"
    quality={80}
    aspectRatio="5:3"
    class="my-8 mx-auto"
  />
</header>
